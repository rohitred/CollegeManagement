@model CollegeManagement.Models.Teacher

@{
    ViewData["Title"] = "Edit Teacher";
}

<form method="post" asp-controller="Teacher" asp-action="Edit">
    <input asp-for="TeacherId" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Course</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherName" class="form-control" />
                        <span asp-validation-for="TeacherName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherEmail"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherEmail" class="form-control" />
                        <span asp-validation-for="TeacherEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherContactNo"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherContactNo" class="form-control" />
                        <span asp-validation-for="TeacherContactNo" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherAddress" class="form-control" />
                        <span asp-validation-for="TeacherAddress" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DepartmentId"></label>
                    </div>
                    <div class="col-8">
                        <select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.listOfDepartment,"DepartmentId","DepartmentName"))">
                            <option>Select Department</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CourseId"></label>
                    </div>
                    <div class="col-8">
                        <select class="form-control" asp-for="CourseId" asp-items="@(new SelectList(ViewBag.listOfCourse,"CourseId","CourseName"))">
                            <option>Select Course</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Edit" />
                        </div>
                        <div>
                            <a asp-controller="Teacher" asp-action="Index" class="btn btn-danger">Go Back</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>

