@model IEnumerable<Department>


@{
    ViewData["Title"] = "Department";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Department List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Department" asp-action="Create" class="btn btn-primary">Add New Department</a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>S.no</th>
                    <th>Name</th>
                    <th>Teachers</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ int countDep = 1; }
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@countDep</td>
                        <td width="50%">@obj.DepartmentName</td>
                        <td>

                            <a asp-controller="Department" asp-action="ShowTeacher" asp-route-id="@obj.DepartmentId" class="btn btn-primary">Show Teacher</a>

                        </td>
                        <td>
                            <a asp-controller="Department" asp-action="Edit" asp-route-id="@obj.DepartmentId" class="btn btn-primary">Edit</a>
                            <a asp-controller="Department" asp-action="Delete" asp-route-id="@obj.DepartmentId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    countDep++;
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Department</p>
    }

</div>

